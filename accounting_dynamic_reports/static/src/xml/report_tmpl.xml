<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!--Template for vertical type reports-->
    <t t-name="report_financial">
        <div class="main_report">
            <div class="report_header">
                <h1><span t-esc="heading" /></h1>
                <p>
                    <span t-esc="date_str" />
                </p>
            </div>
            <div class="report-content" style="width:100%;">
                <table class="vertical_report" style="width:99%;margin-left:7px;">
                    <tbody class="categ" style="width:100%;">
                        <t t-foreach="first_childs" t-as="child">
                            <t t-if="child['type']=='account'">
                                <t t-set="line_id" t-value="child['a_id']" />
                            </t>
                            <t t-if="child['type']!='account'">
                                <t t-set="line_id" t-value="child['id']" />
                            </t>
                            <tr t-att-id='line_id' style="width:100%;">
                                <td t-att-data-id='line_id' data-type="child['type']"
                                    style="font-size:20px;font-weight: bold;width:40%;padding-left:14px;">
                                    <span t-esc="child['name']" />
                                </td>
                                <td t-att-data-id='line_id' data-type="child['type']" style="width:25%;" ></td>
                                <td t-att-data-id='line_id' data-type="child['type']" style="width:25%;font-size:22px;font-weight: bold;">
                                    <span t-esc="child['balance']" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </t>

    <!--Template for horizontal type reports-->
    <t t-name="report_financial_horizontal">
        <div class="main_report">
            <div class="report_header">
                <h1><span t-esc="parent['name']" /></h1>
                <p>
                    <span t-esc="date_str" />
                </p>
            </div>
            <div style="border: 1px solid;width:100%;height:auto;overflow:auto;">
                <div class="report-content_left" style="width:50%;float:left;margin-top:10px;">
                    <table class="horizontal_report_left" style="width:99%;margin-left:7px;">
                        <tbody class="categ" style="width:100%;">
                            <tr t-att-id='data_id_left' style="width:100%;">
                                <td t-att-data-id='data_id_left' data-type="left['type']"
                                    style="font-size:20px;font-weight: bold;width:40%;padding-left:14px;">
                                    <span t-esc="left['name']" />
                                </td>
                                <td t-att-data-id='data_id_left' data-type='report' style="width:25%;"></td>
                                <td t-att-data-id='data_id_left' data-type='report' style="font-size:22px;font-weight: bold;width:25%;">
                                    <span t-esc="left['balance']" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="report-content_right" style="width:50%;float:left;margin-top:10px;">
                    <table class="horizontal_report_right" style="width:99%;margin-left:7px;">
                        <tbody class="categ" style="width:100%;">
                            <tr t-att-id='data_id_right' style="width:100%;">
                                <td t-att-data-id='data_id_right' data-type="right['type']"
                                    style="font-size:20px;font-weight: bold;width:40%;padding-left:14px;">
                                    <span t-esc="right['name']" />
                                </td>
                                <td t-att-data-id='data_id_right' data-type='report' style="width:25%;"></td>
                                <td t-att-data-id='data_id_right' data-type='report' style="font-size:22px;font-weight: bold;width:25%;">
                                    <span t-esc="right['balance']" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</templates>